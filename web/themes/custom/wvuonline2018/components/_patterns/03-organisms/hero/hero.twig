{% set modifier = 'wvu-hero--' ~ hero_size  %}
<div class="wvu-hero wvu-hero--diagonal-line wvu-hero--big-picture {{ modifier }}" data-responsive-background-image>
  {{ background_image }}
  <div class="wvu-hero__container">
    <div class="wvu-hero__copy">
      <h1 class="wvu-hero__title"><span>{{ title }}</span></h1>
      {% if body %}
        <div class="wvu-hero__body">{{ body }}</div>
      {% endif %}
      {% if link_url %}
        {% embed "@atoms/01-links/link/link.twig"
          with {
          link_url: link_url,
          link_base_class: "button"
        } %}
          {% block link_content %}
            {{ link_content }}
          {% endblock %}
      {% endembed %}
      {% endif %}
    </div>
  </div>
</div>