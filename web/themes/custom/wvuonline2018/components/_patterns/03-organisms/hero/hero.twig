{% set modifier = 'wvu-hero--' ~ hero_size  %}
<div class="wvu-hero wvu-hero--diagonal-line wvu-hero--big-picture {{ modifier }}" style="background-image: linear-gradient(
    rgba(44, 42, 41, 0.45),
    rgba(44, 42, 41, 0.45)
    ),url({{ background_image }}); ">
  <div class="wvu-hero__container">
    <div class="wvu-hero__copy">
      <h1 class="wvu-hero__title"><span>{{ title }}</span></h1>
      {% if body %}
        <div class="wvu-hero__body">{{ body }}</div>
      {% endif %}
      {% if link %}
        {% include "@atoms/06-buttons/01-button.twig"
          with {
          button_link: link.url,
          button_text: link.text
        }
        %}
      {% endif %}
    </div>
  </div>
</div>